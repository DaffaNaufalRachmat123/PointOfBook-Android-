<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/sold_card"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/imageSold"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:src="@mipmap/ic_launcher_round"
            android:layout_margin="10dp"/>
        <TextView
            android:id="@+id/sold_books_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="17sp"
            android:layout_toRightOf="@id/imageSold"
            android:layout_marginTop="10dp"
            android:textColor="@android:color/black"
            android:text="Terjual : Matahari"/>
        <TextView
            android:id="@+id/sold_books_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/imageSold"
            android:layout_below="@id/sold_books_title"
            android:textColor="@android:color/black"
            android:textSize="15sp"
            android:text="Total Terjual : 10"/>
        <TextView
            android:id="@+id/sold_books_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/imageSold"
            android:layout_below="@id/sold_books_count"
            android:textColor="@android:color/black"
            android:textSize="15sp"
            android:text="Total Harga : 14000"/>
        <TextView
            android:id="@+id/sold_books_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/imageSold"
            android:layout_below="@id/sold_books_price"
            android:textColor="@android:color/black"
            android:textSize="15sp"
            android:text="Sttus : Sold Out"/>
        <TextView
            android:id="@+id/sold_books_buyer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/imageSold"
            android:layout_below="@id/sold_books_status"
            android:textColor="@android:color/black"
            android:textSize="15sp"
            android:text="Buyer : Daffa Naufal Rachmamt"/>
    </RelativeLayout>
</android.support.v7.widget.CardView>