<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/card_books"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/image_book"
            android:layout_width="130dp"
            android:paddingBottom="16dp"
            android:paddingTop="16dp"
            android:layout_height="130dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:src="@mipmap/ic_launcher_round"/>
        <TextView
            android:id="@+id/book_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/image_book"
            android:text="Nama : Daffa Naufal Rachmat"
            android:paddingTop="16dp"
            android:textColor="@android:color/black"
            android:textSize="20sp"/>
        <TextView
            android:id="@+id/count_book"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/image_book"
            android:layout_below="@id/book_name"
            android:textColor="@android:color/black"
            android:text="Jumlah : 20"
            android:textSize="15sp"/>
        <TextView
            android:id="@+id/price_book"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/image_book"
            android:layout_below="@id/count_book"
            android:textColor="@android:color/black"
            android:textSize="15sp"
            android:text="Harga : 15000"/>
        <TextView
            android:id="@+id/status_teks"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:layout_toRightOf="@id/image_book"
            android:layout_below="@id/price_book"
            android:text="Status : Available"/>
    </RelativeLayout>
</android.support.v7.widget.CardView>